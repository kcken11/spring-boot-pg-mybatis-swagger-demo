<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.melot.talkee.agent.mapper.AgentMenuMapper">
  <resultMap id="BaseResultMap" type="com.melot.talkee.agent.domain.AgentMenu">
    <id column="menu_id" jdbcType="INTEGER" property="menuId" />
    <result column="menu_name" jdbcType="VARCHAR" property="menuName" />
    <result column="parent_id" jdbcType="INTEGER" property="parentId" />
    <result column="action" jdbcType="VARCHAR" property="action" />
    <result column="data" jdbcType="VARCHAR" property="data" />
    <result column="list_order" jdbcType="INTEGER" property="listOrder" />
    <result column="display" jdbcType="INTEGER" property="display" />
    <result column="add_time" jdbcType="TIMESTAMP" property="addTime" />
    <result column="route" jdbcType="VARCHAR" property="route" />
  </resultMap>

  <sql id="Base_Column_List">
    menu_id, menu_name, parent_id, action, data, list_order, display, add_time, route
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from agent_menu_info
    where menu_id = #{menuId,jdbcType=INTEGER}
  </select>

  <select id="getMenuList" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from agent_menu_info  order by list_order
  </select>


</mapper>